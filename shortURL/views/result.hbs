<img
  src='https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png'
  alt='picture of shorten link'
  style='display:block; margin:auto;'
/>
<form action='/result/{{cryp}}' method='GET' style='display: inline;'>
  <div class='input-group'>
    <input
      id='copy-board'
      class='form-control'
      type='text'
      placeholder='name'
      name='longUrl'
      value='{{shortUrl}}'
      readonly
    />
    <button class='btn btn-primary' type='button' onclick='copy()'>copy</button>
    <button class='btn btn-success' type='submit'>take me to origin URL!</button>
  </div>
</form>
<script>
  function copy() { const input = document.getElementById("copy-board"); const
  textToCopy = input.value; tempTextArea = document.createElement("textarea");
  tempTextArea.value = textToCopy; document.body.appendChild(tempTextArea);
  tempTextArea.select(); document.execCommand("copy");
  document.body.removeChild(tempTextArea); alert("copy")}
</script>